<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Massenger" Height="700" Width="1000" Icon="Resources/bedwyr128.ico" >
    <!--WindowStyle="None" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="600*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Первый столбец с иконками-->
        <Border  Grid.RowSpan="3" Grid.Column="0"  Background="Gray" />
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Image Grid.Row="0"  Height="50" Width="50">
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/chat-person.png</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
            <Image Grid.Row="0"  Height="40" Width="50">
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/phone-call.png</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
            <Image Grid.Row="0"  Height="40" Width="45">
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/chat-groups.png</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
            
        </StackPanel>
        <Image Name="btnSetings" Grid.Row="3" Grid.Column="0" Height="50" Width="50" > <!--MouseLeftButtonUp="Image_MouseLeftButtonUp"-->
            <Image.Source>
                <BitmapImage>
                    <BitmapImage.UriSource>Resources/setting-icon.png</BitmapImage.UriSource>
                </BitmapImage>
            </Image.Source>
        </Image>
        <!--Второй столбец-->
        <Border  Grid.RowSpan="3" Grid.Column="1" Background="LightGray" />
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <Image Source="Resources/search.png" Height="25" Width="25"/>
            <RichTextBox Background="LightGray" Width="143" BorderBrush="LightGray" >
</RichTextBox>
        </StackPanel>
        
        
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button  Height="50" BorderBrush="LightGray">
                <StackPanel Orientation="Horizontal" >
                    <Image Grid.Row="0"  Height="40" Width="45" Source="Resources/human.png"/>
                    <StackPanel>
                        <TextBlock Text="Richard Sakurov" FontWeight="Bold" FontSize="15" Foreground="Chocolate"/>
                        <TextBlock Text="Hello!How do you do?" FontWeight="Bold"  FontSize="10"  Margin="10 0 0 0 "/>
                    </StackPanel>
                </StackPanel>
            </Button>
            <Button  Height="50" BorderBrush="LightGray">
                <StackPanel Orientation="Horizontal" >
                    <Image Grid.Row="0"  Height="40" Width="45" Source="Resources/human.png"/>
                    <StackPanel>
                        <TextBlock Text="Anton Kuznetsov" FontWeight="Bold" FontSize="15" Foreground="Chocolate"/>
                        <TextBlock Text="I haven't started yet" FontWeight="Bold"  FontSize="10"  Margin="10 0 0 0 "/>
                    </StackPanel>
                </StackPanel>
            </Button>
        </StackPanel>
        
        <!--Верх/Третий столбец-->
        <Border Grid.Column="2" Grid.ColumnSpan="4" Background="Orange"/>
        <StackPanel Grid.Column="2">
            <TextBlock Text="Richard Sakurov" FontWeight="Bold" FontSize="13" Margin="10 0 0 0"/>
            <TextBlock Text="was online 3 minuts ago" FontSize="10" Foreground="White" Margin="12 0 0 0"/>
           </StackPanel>

        <Grid  Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="720*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image  Height="20" Width="20" Grid.Column="0" Margin="5 0 0 0 ">
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/paperclip.png</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
            <RichTextBox MaxHeight="40"  BorderBrush="White" Grid.Column="1">
                
            </RichTextBox>
            <Image  Height="20" Width="20" Grid.Column="2" Margin="0 0 5 0">
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/send-message.png</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
        </Grid>
        <!---->
        <Image Grid.Column="3" Height="20" Width="20" Margin="0 0 10 0">
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/search2.png</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
         <Image Grid.Column="4" Height="20" Width="20" Margin="0 0 10 0">
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/soundOn.png</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
        <Image Grid.Column="4" Height="20" Width="20" Margin="0 0 10 0">
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/soundOn.png</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
        <Image Grid.Column="5" Height="20" Width="20" Margin="0 0 10 0" MouseLeftButtonDown="Image_MouseLeftButtonDown" >
                <Image.Source>
                    <BitmapImage>
                        <BitmapImage.UriSource>Resources/cat2.ico</BitmapImage.UriSource>
                    </BitmapImage>
                </Image.Source>
            </Image>
        <!---->
        <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4">
            <RichTextBox BorderBrush="LightGray" >
                <RichTextBox.Background>
                    <ImageBrush ImageSource="Resources/background-site1.jpg"/>
                </RichTextBox.Background>
            </RichTextBox>
        </Grid>
    </Grid>
</Window>
